menu "Firmware configuration"

	config RXOS_PLATFORM
		string "Platform name"
		default BR2_TARGET_GENERIC_HOSTNAME
		help
		  Name of the platform

	config RXOS_VERSION
		string "Platform version"
		default 0.0
		help
		  Platform version

	choice
		prompt "Initramfs compression method"
		default RXOS_INITRAMFS_LZ4

	config RXOS_INITRAMFS_LZ4
		bool "LZ4"
		help
		  Low compression ratio but faster decompression
		  and faster boot.

	config RXOS_INITRAMFS_GZIP
		bool "GZIP"
		help
		  Decent compression ratio and reasonable
		  decompression speed.

	config RXOS_INITRAMFS_XZ
		bool "XZ"
		help
		  Highest compression ratio and slowest 
		  decompression.

	endchoice

	config RXOS_INITRAMFS_COMPRESSION
		string
		default "lz4" if RXOS_INITRAMFS_LZ4
		default "gzip" if RXOS_INITRAMFS_GZIP
		default "xz" if RXOS_INITRAMFS_XZ

endmenu

